@page
@model PDApp.Pages.ResourceSpots.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>PD Activity List</h1>

<p>
    <a asp-page="Create">Create</a>
</p>
<table class="table table-hover w-auto">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Resources[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Resources[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Resources[0].Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Resources[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Resources[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Resources[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Resources[0].Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Resources) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            </tr>
            <tr>
                <td colspan="6">
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                    <hr />
                </td>
            </tr>
}
    </tbody>
</table>
